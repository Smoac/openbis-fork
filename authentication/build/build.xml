<project name="authentication" basedir="..">
	<import file="../../build_resources/ant/build-common.xml" />
	<project-classpath name="ecp" classes="${classes}" />
	<property name="lib" value="../libraries" />

  <target name="ci" depends="build-common.ci, check-restrictions, check-dependencies"/>
	
	<target name="check-restrictions" depends="compile, compile-tests">
		<exec executable="sh" dir="${lib}" failonerror="true">
			<arg value="restrictionchecker/jrc"/>
			<arg value="-jd"/>
			<arg value="."/>
			<arg value="-r"/>
			<arg value="../common/${classes}"/>
			<arg value="../authentication/${classes}"/>
		</exec>
	</target>
	
</project>