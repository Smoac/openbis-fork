<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <import resource="applicationContext.xml"/>

    <bean id="db-test-helper" class="ch.ethz.sis.openbis.generic.server.asapi.v3.search.planner.SamplesDBTestHelper" init-method="setUp"
          destroy-method="tearDown">
        <property name="autocommit" value="false"/>
    </bean>

    <bean id="sql-executor" factory-bean="db-test-helper" factory-method="getSqlExecutor"/>
</beans>