{package} = ch.systemsx.cisd.common

[annotation] = ${package}.annotation.*
check sets [annotation]

[config] = ${package}.config.*
check sets [config]

[converter] = ${package}.converter.*
check sets [converter]

[db] = ${package}.db.*
check sets [db]


[exceptions] = ${package}.exceptions.*
check sets [exceptions]

[logging] = ${package}.logging.*
check sets [logging]

[parser] = ${package}.parser.*
check sets [parser]

[test] = ${package}.test.*
check sets [test]

[utilities] = ${package}.utilities.*
check sets [utilities]

layer layer0 = [annotation] [exceptions] [logging] [test]
layer layer1 = [utilities] 
layer layer2 = [config] [db] [parser]

check layeringOf layer0 layer1 layer2

check [parser] independentOf ${package}.exceptions.UserFailureException 